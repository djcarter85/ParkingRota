@page
@model ParkingRota.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete User";
}

<h2>Delete User</h2>

<h4>Are you sure you want to delete this user? This cannot be undone.</h4>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ApplicationUser.FirstName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ApplicationUser.FirstName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ApplicationUser.LastName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ApplicationUser.LastName)</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="ApplicationUser.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Return without deleting</a>
    </form>
</div>