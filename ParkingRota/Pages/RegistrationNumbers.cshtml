@page
@model ParkingRota.Pages.RegistrationNumbersModel
@{
    ViewData["Title"] = "Registration Numbers";
}

<h2>Registration Numbers</h2>
<h4>Also known as, "Who's parked behind me?"</h4>
<hr />

<table class="table table-top table-striped table-responsive table-bordered">
    <thead>
        <tr>
            <th>Registration number</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var registrationNumberRecord in Model.RegistrationNumberRecords)
            {
                <tr>
                    <td>@registrationNumberRecord.CarRegistrationNumber.ToUpper().Replace(" ", string.Empty)</td>
                    <td>@registrationNumberRecord.FullName</td>
                </tr>
            }
        }
    </tbody>
</table>